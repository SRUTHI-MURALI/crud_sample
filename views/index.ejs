<!-- include header -->
<%- include('header') %>
<!-- /include header -->

<!-- Main Site -->
<main id="site-main">
  <div class="container">
    <div class="col box-nav d-flex justify-between mb-2">
      <a href="/add-user" class="border-shadow">
        <span class="text-gradient">New User <i class="fas fa-user"></i></span>
      </a>

      <a href="/logout" class="border-shadow">
        <span class="text-gradient"
          >Logout <i class="fas fa-sign-out"></i
        ></span>
      </a>
    </div>
    <form action="/search" method="GET">
      <div class="mt-1 input-group">
        <div class="form-outline">
          <input type="search" name="name" id="form1" class="form-control" />
        </div>
        <button type="submit" class="btn btn-primary">Search</button>
      </div>
    </form>

    <!-- form handling -->
    <form action="/admin_panel" method="POST">
      <table class="table">
        <thead class="thead-dark">
          <tr>
            <!-- <th>ID</th> -->
            <th>Name</th>
            <th>@Email</th>
            <th>Gender</th>
            <th>Status</th>
            <th>Action</th>
          </tr>
        </thead>
        <tbody>
          <%- include('show') %>
        </tbody>
      </table>
    </form>
  </div>
</main>
<!-- /Main Site -->

<!-- include footer -->
<%- include('footer') %>
<!-- /include footer -->
